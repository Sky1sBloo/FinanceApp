@{
    ViewData["Title"] = "Goals";
}
<div class="container-fluid border" style="height: 80vh">
    <section class="border-bottom">
        <h4 class="pt-2">Goals</h4>
        <form class="container pb-2">
            <div class="row">
                <div class="col d-flex flex-column">
                    <label>Name</label>
                    <input type="text" />
                    <label>Target Amount</label>
                    <input type="number" placeholder="0.00" />
                    <label>Deadline</label>
                    <input type="date" placeholder="0.00" />
                </div>
                <div class="col d-flex flex-column">
                    <label>Category</label>
                    <partial name="_ExpenseCategories" />

                    <label>Priority</label>
                    <select>
                        <option>High</option>
                        <option>Medium</option>
                        <option>Low</option>
                    </select>
                </div>
            </div>
            <div class="text-end">
                <input class="mt-2" type="submit" value="submit"/>
            </div>
        </form>
    </section>
    <section>
        <form class="d-flex justify-content-between">
            <h4>Goals</h4>
            <div>
                <input type="button" value="+" />
                <input type="button" value="-" />
                <input type="button" value="edit" />
                <label>Search</label>
                <input type="text" />
            </div>
        </form>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Target</th>
                    <th scope="col">Priority</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Test</td>
                    <td>Test</td>
                    <td>Test</td>
                    <td>Test</td>
                    <td>Test</td>
                </tr>
            </tbody>
        </table>
    </section>
</div>